<h1>List Items</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list.list_items.each do |list_item| %>
      <tr>
        <td><%= link_to 'Show', list_list_item_path(list_item) %></td>
        <td><%= link_to 'Edit', edit_list_list_item_path(list_item) %></td>
        <td><%= link_to 'Destroy', list_list_item_path(list_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

